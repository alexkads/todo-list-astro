---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Todo List - Sistema de Tarefas">
  <div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-md w-full space-y-8 text-center">
      <div>
        <h1 class="text-4xl font-extrabold text-gray-900 mb-4">
          Sistema de Tarefas
        </h1>
        <p class="text-lg text-gray-600 mb-8">
          Organize suas tarefas de forma simples e eficiente
        </p>
        
        <div id="loading" class="space-y-4">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600 mx-auto"></div>
          <p class="text-gray-600">Verificando autenticação...</p>
        </div>
        
        <div id="auth-buttons" class="hidden space-y-4">
          <a
            href="/login"
            class="block w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200"
          >
            Entrar
          </a>
          <a
            href="/register"
            class="block w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 px-4 rounded-lg transition duration-200"
          >
            Criar Conta
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Verificar se o usuário já está autenticado
    async function checkAuthAndRedirect() {
      try {
        const response = await fetch('/api/auth/me');
        if (response.ok) {
          // Usuário autenticado, redirecionar para dashboard
          window.location.href = '/dashboard';
        } else {
          // Usuário não autenticado, mostrar botões de login
          document.getElementById('loading')?.classList.add('hidden');
          document.getElementById('auth-buttons')?.classList.remove('hidden');
        }
      } catch (error) {
        // Erro na verificação, mostrar botões de login
        document.getElementById('loading')?.classList.add('hidden');
        document.getElementById('auth-buttons')?.classList.remove('hidden');
      }
    }

    checkAuthAndRedirect();
  </script>
</Layout>